@model IEnumerable<LeaveTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i> Create New</a>
</p>
<table class="table" id="LeaveTypeTable">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                DateCreated
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DateCreated
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">
                        <i class="fa fa-info" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to Delete this ?')">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#LeaveTypeTable').DataTable();
        });
    </script>
}
