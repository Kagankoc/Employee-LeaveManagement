@model CreateLeaveAllocationViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                LeaveTypes
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveTypes)
        {
            <tr>

                <td>
                    @item.Name
                </td>

                <td>
                    <a class="btn btn-outline-success" asp-action="SetLeave" asp-route-id="@item.Id">
                        <i class="fa fa-pencil"></i> Allocate To Employees
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
