@model ViewAllocationsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details For - @Model.Employee.LastName,@Model.Employee.FirstName</h1>

<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Model.Employee.UserName
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.UserName
        </dd>
        <dt class="col-sm-2">
            @Model.Employee.Email
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.Email
        </dd>
        <dt class="col-sm-2">
            @Model.Employee.PhoneNumber
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            @Model.Employee.FirstName
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.FirstName
        </dd>
        <dt class="col-sm-2">
            @Model.Employee.LastName
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.LastName
        </dd>
        <dt class="col-sm-2">
            @Model.Employee.TaxId
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.TaxId
        </dd>
        <dt class="col-sm-2">
            @Model.Employee.DateOfBirth
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.DateOfBirth
        </dd>
        <dt class="col-sm-2">
            @Model.Employee.DateJoined
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.DateJoined
        </dd>
    </dl>
</div>


<hr />

<h2>Leave Allocations</h2>


<div class="card" style="width: 18rem;">

    <ul class="list-group list-group-flush">

        @foreach (var item in Model.LeaveAllocations)
        {
            <li class="list-group-item">
                <h6>
                    @item.LeaveType.Name <span class="badge badge-secondary">@item.NumberOfDays</span> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                        <i class="fa fa-pencil"></i>Edit
                    </a>
                </h6>
            </li>
        }

    </ul>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>